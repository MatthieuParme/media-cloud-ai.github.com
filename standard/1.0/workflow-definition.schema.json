{
    "$id": "https://media-cloud.ai/standard/1.0/workflow-definition.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "start_parameter": {
            "type": "object",
            "properties": {
                "id": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Identifier of the parameter",
                    "type": "string"
                },
                "label": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Label of the parameter",
                    "type": "string"
                },
                "type": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Type of the data value for this parameter",
                    "type": "string",
                    "enum": [
                        "file",
                        "choice",
                        "number"
                    ]
                },
                "default": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Default value of the parameter",
                    "type": [
                        "integer",
                        "number",
                        "string",
                        "array"
                    ]
                },
                "value": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Value of the parameter",
                    "type": [
                        "integer",
                        "number",
                        "string",
                        "array"
                    ]
                },
                "required": {
                    "default": false,
                    "title": "Set the parameter required",
                    "type": "boolean"
                }
            },
            "required": [
                "id",
                "label",
                "type"
            ]
        },
        "parameter": {
            "type": "object",
            "properties": {
                "id": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Identifier of the parameter",
                    "type": "string"
                },
                "type": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Type of the data value for this parameter",
                    "type": "string",
                    "enum": [
                        "array_of_strings",
                        "array_of_templates",
                        "boolean",
                        "credential",
                        "filter",
                        "integer",
                        "requirements",
                        "string",
                        "template"
                    ]
                },
                "default": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Default value of the parameter",
                    "type": [
                        "boolean",
                        "number",
                        "integer",
                        "string",
                        "array"
                    ]
                },
                "value": {
                    "default": "",
                    "pattern": "^(.*)$",
                    "title": "Value of the parameter",
                    "type": [
                        "boolean",
                        "number",
                        "integer",
                        "string",
                        "array"
                    ]
                }
            },
            "required": [
                "id",
                "type",
                "value"
            ]
        },
        "start_parameters": {
            "items": { "$ref": "#/definitions/start_parameter" },
            "title": "Array of Start Parameter",
            "type": "array"
        },
        "parameters": {
            "items": { "$ref": "#/definitions/parameter" },
            "title": "Array of Parameter",
            "type": "array"
        }
    },
    "properties": {
        "identifier": {
            "$id": "#/properties/identifier",
            "default": "",
            "examples": [
                "speech_to_text"
            ],
            "pattern": "^([a-z_]+)$",
            "title": "The Identifier of the workflow, used to reference it",
            "type": "string"
        },
        "label": {
            "$id": "#/properties/label",
            "default": "",
            "examples": [
                "speech_to_text"
            ],
            "pattern": "^(.*)$",
            "title": "The label of the workflow, used as displayed name",
            "type": "string"
        },
        "icon": {
            "$id": "#/properties/icon",
            "default": "",
            "examples": [
                "subtitles"
            ],
            "pattern": "^([a-z_]+)$",
            "title": "The icon used with the label. One of https://material.io/resources/icons/",
            "type": "string"
        },
        "start_parameters": {
            "title": "Definition of available parameters to start the workflow definition",
            "$ref": "#/definitions/start_parameters"
        },
        "parameters": {
            "title": "Storage of dynamic parameters during process of the workflow instance",
            "$ref": "#/definitions/parameters"
        },
        "steps": {
            "items": {
                "properties": {
                    "enable": {
                        "default": false,
                        "examples": [
                            true
                        ],
                        "title": "The Enable Schema",
                        "type": "boolean"
                    },
                    "icon": {
                        "default": "",
                        "examples": [
                            "file_download"
                        ],
                        "pattern": "^(.*)$",
                        "title": "The Icon Schema",
                        "type": "string"
                    },
                    "id": {
                        "default": 0,
                        "examples": [
                            0
                        ],
                        "title": "The Id Schema",
                        "type": "integer"
                    },
                    "label": {
                        "default": "",
                        "examples": [
                            "Download source elements"
                        ],
                        "pattern": "^(.*)$",
                        "title": "The Label Schema",
                        "type": "string"
                    },
                    "name": {
                        "default": "",
                        "examples": [
                            "job_transfer"
                        ],
                        "pattern": "^([a-z_]+)$",
                        "title": "Name of the parameter",
                        "type": "string"
                    },
                    "parameters": {
                        "$ref": "#/definitions/parameters"
                    },
                    "parent_ids": {
                        "title": "Reference(s) of parent steps",
                        "type": "array",
                        "items": { "type": "integer" }
                    },
                    "required": {
                        "title": "Reference(s) of required steps to start that step",
                        "type": "array",
                        "items": { "type": "integer" }
                    }
                },
                "required": [
                    "id",
                    "name",
                    "label",
                    "icon",
                    "parameters"
                ],
                "title": "The Items Schema",
                "type": "object"
            },
            "title": "The Steps Schema",
            "type": "array"
        },
        "tags": {
            "items": {
                "default": "",
                "examples": [
                    "speech_to_text"
                ],
                "pattern": "^(.*)$",
                "title": "The Items Schema",
                "type": "string"
            },
            "title": "The Tags Schema",
            "type": "array"
        },
        "version_major": {
            "title": "Major version of this Workflow definition",
            "type": "integer"
        },
        "version_minor": {
            "title": "Minor version of this Workflow definition",
            "type": "integer"
        },
        "version_micro": {
            "title": "Micro version of this Workflow definition",
            "type": "integer"
        }
    },
    "required": [
        "identifier",
        "label",
        "icon",
        "version_major",
        "version_minor",
        "version_micro",
        "tags",
        "parameters",
        "steps"
    ],
    "title": "Schema of Workflow Definition for Media Cloud AI",
    "type": "object"
}
